</Layout>

<script is:inline>
	const terminalCommandNode = document.querySelector('#terminal-command');
	const statusMessageNode = document.querySelector('#status-message-text');

	const statusMessages = [
		'Building things that are simple to use and easy to maintain.',
		'Learning more about Kubernetes and platform engineering.',
		'Improving developer workflows with better tooling.',
		'Shipping portfolio updates and refining UI details.',
	];

	if (statusMessageNode) {
		let messageIndex = 0;
		setInterval(() => {
			messageIndex = (messageIndex + 1) % statusMessages.length;
			statusMessageNode.classList.add('is-changing');
			setTimeout(() => {
				statusMessageNode.textContent = statusMessages[messageIndex];
				statusMessageNode.classList.remove('is-changing');
			}, 180);
		}, 5000);
	}

	const terminalCommands = [
		'bun install',
		'bun run build',
		'docker compose up -d',
		'git push origin main',
		'bootc update',
		'adb sideload ota.zip',
		'tailscale up',
	];

	if (terminalCommandNode) {
		let commandIndex = 0;
		let charIndex = 0;
		let isDeleting = false;

		const runTypewriter = () => {
			const currentCommand = terminalCommands[commandIndex];

			if (isDeleting) {
				charIndex = Math.max(0, charIndex - 1);
			} else {
				charIndex = Math.min(currentCommand.length, charIndex + 1);
			}

			terminalCommandNode.textContent = currentCommand.slice(0, charIndex);

			let delay = isDeleting ? 46 : 86;
			if (!isDeleting && charIndex === currentCommand.length) {
				delay = 1100;
				isDeleting = true;
			} else if (isDeleting && charIndex === 0) {
				delay = 300;
				isDeleting = false;
				commandIndex = (commandIndex + 1) % terminalCommands.length;
			}

			setTimeout(runTypewriter, delay);
		};

		terminalCommandNode.textContent = '';
		setTimeout(runTypewriter, 250);
	}
</script>

	<style>
		:root {
			--bg: #090d12;
			--bg-elevated: #0a0f16;
			--tile: #10151c;
			--tile-strong: #0c1118;
			--tile-alt: #0d1219;
			--text: #eef0f2;
			--text-soft: #ccd1d8;
			--muted: #9da3ad;
			--border: #303744;
			--accent: #e24a53;
			--ring: #3d4658;
