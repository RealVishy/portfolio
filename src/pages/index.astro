		}

		.hero-top {
			display: flex;
			justify-content: flex-end;
			margin-bottom: 0.75rem;
		}

		.theme-toggle {
			display: inline-grid;
			grid-template-columns: repeat(3, minmax(0, 1fr));
			gap: 0.35rem;
			padding: 0.25rem;
			border: 1px solid color-mix(in srgb, var(--accent), var(--border) 65%);
			background: var(--tile-strong);
			position: relative;
			isolation: isolate;
			--active-index: 1;
		}

		.theme-toggle::before {
			content: '';
			position: absolute;
			top: 0.25rem;
			bottom: 0.25rem;
			left: calc(
				0.25rem + (var(--active-index) * (((100% - 0.5rem - 0.7rem) / 3) + 0.35rem))
			);
			width: calc((100% - 0.5rem - 0.7rem) / 3);
			background: var(--accent);
			border: 1px solid color-mix(in srgb, var(--accent), black 25%);
			transition: left 0.22s ease;
			z-index: 0;
		}

